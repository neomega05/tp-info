#include <stdio.h>
#include <ctype.h>
int main(){
    FILE*fichier=fopen("texte.txt","r");
    if (fichier==NULL){
        printf("Erreur lors de l'ouverture du fichier\n");
        return 1;
    }
    int caractere,nbCaracteres=0,nbMots=0,nbLignes=0;
    int dansMot=0;

    while ((caractere=fgetc(fichier))!=EOF){
        nbCaracteres++;
        if(caractere=='\n') nbLignes++;
        if(isspace(caractere)){
            dansMot=0;
        } else if(!dansMot){
            nbMots++;
            dansMot=1;
        }
    }
    fclose(fichier);
    printf("Nombre de caract√®res: %d\n",nbCaracteres);
    printf("Nombre de mots: %d\n",nbMots);
    printf("Nombre de lignes: %d\n",nbLignes);
    return 0;
}
